<%- include("partials/header") %>
<% var pageload
%>

<link rel="stylesheet" href="/requestmenu.css">
<style>

.circle{
display: inline-block;
margin: 2%;
height: 50px;
width: 50px;
border-radius: 100px;
background: black;
opacity: 0;
}
.centerxy{
width: 100%;
text-align: center;
position: absolute;
top: 50%;
left: 50%;
transform: translate(-50%,-50%);
}

.white{
position: relative;
z-index: 105;
}
.blue{
position: relative;

z-index: 101;
}
.red{
position: relative;

z-index: 102;
}
.yellow{
position: relative;

z-index: 103;
}
.lblue{
position: relative;

z-index: 104;
}
.endtext{
font-family: 'Sacramento', cursive;
font-size: 50px;
opacity: 0;
}
.pagetransition{
    z-index: 20000;
background-color: white;
position: fixed;
top: 0%;
width: 100vw;
height: 100vh;
overflow: hidden;
display: block;
}
@media only screen and (max-width: 900px) {
    .endtext{
font-family: 'Sacramento', cursive;
font-size: 40px;
opacity: 0;
}
}
@media only screen and (max-width: 480px) {
    .endtext{
font-family: 'Sacramento', cursive;
font-size: 25px;
opacity: 0;
}
.circle{
display: block;
margin: 3% auto;
height: 50px;
width: 50px;
border-radius: 100px;
background: black;

}
}


</style>
<style>
.reqmainmenu .box .img{
    background: url(/IT-01.jpg);
    background-size: cover;
    height: 225px;
    display: block;
    border-radius: 10px;
}
.reqmenu:nth-child(2) .box .img{
    background: url(/MD-01.jpg);
    background-size: cover;
}
.reqmenu:nth-child(3) .box .img{
    background: url(/BD-01.jpg);
    background-size: cover;

}
</style>
